% menu


menu :- repeat,
  write('Escolha uma opção:'),nl,
  write('1. Historico escolar de um estudante'),nl,
  write('2. Matriz curricular de um curso'),nl,
  read(Choice),
  write(Choice),

  break.

% aux

printlist([]).
printlist([X|List]):- write(X), nl, printlist(List).

inserir :-
 write('what is yout name? '),
 read(X),
 write('hi '),
 write(X),nl,
 assert(loves(X,dancing)).

deletar :-
 write('quem vc quer deletaer'),
 read(X),
 retract(loves(X,dancing)).

editar :-
    read(X),
    read(Y),
    retract(loves(X,dancing)),
    assert(loves(X,Y)).

exemplo() :-
     read(X),
    read(Y),
    printlist([X,Y]).


men :- write('menu'),nl,
 write('1'),nl,
 write('2'),nl,
 write('3'), read(Opcion),
 ejecutar(Opcion).

ejecutar(Opcion) :- Opcion == 1, inserir, men;
Opcion == 2, deletar, men;
Opcion ==0, true.
